<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/appointment_list_item_height"
    android:focusable="true"
    android:padding="@dimen/list_margin"
    android:clickable="true">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGreyBg"
        android:padding="@dimen/item_padding">

        <TextView
            android:id="@+id/appointment_id"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/appointment_reason"
            android:layout_below="@id/appointment_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</FrameLayout>